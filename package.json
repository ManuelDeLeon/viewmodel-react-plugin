{
  "name": "vmc2jsx",
  "description": "Converts ViewModel code into React",
  "main": "src/index.js",
  "version": "0.0.0-semantically-released",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "mocha src/index.test.js -w",
    "test:single": "istanbul cover -x *.test.js ./node_modules/mocha/bin/_mocha -- -R spec src/index.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ManuelDeLeon/vmc2jsx.git"
  },
  "keywords": [
    "ViewModel",
    "React"
  ],
  "author": "Manuel De Leon <manueldeleon@gmail.com> (https://viewmodel.org/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ManuelDeLeon/vmc2jsx/issues"
  },
  "homepage": "https://github.com/ManuelDeLeon/vmc2jsx#readme",
  "devDependencies": {
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.5.0",
    "cz-conventional-changelog": "1.1.5",
    "ghooks": "1.0.3",
    "istanbul": "0.4.2",
    "mocha": "2.4.5",
    "semantic-release": "^4.3.5"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  }
}
